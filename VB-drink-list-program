
//หน้าต่างล็อกอิน และเมื่อใส่รหัสผิดขึ้นหน้าต่างข้อผิดพลาด
Class Public Class Form1
    Private Sub ButtonLogin_Click(ByVal sender As System"Object, ByVal e As System.EventArgs) Handles ButtonLogin_Click
        If username.text = My.Setting.user Or password.text = My.Settings.pass Then
            Form2.Show()
            Me.Hide()
        Else
            MsgBox("Username และ Password ของคุณไม่ถูกต้อง",MsgBoxStyle.Critical,"ข้อผิดพลาด")
        End If
    End Sub

    Private Sub ButtonExit_Click(ByVal sender As System"Object, ByVal e As System.EventArgs) Handles ButtonExit_Click
        End
    End Sub
End Class

//หน้าต่างฟอร์มรายการเครื่องดื่ม
Class Public Class Form2
    Private Sub Buttonชานมไต้หวัน_Click(ByVal sender As System"Object, ByVal e As System.EventArgs) Handles Buttonชานมไต้หวัน_Click
        Dim nam1, price1, sum1, total, get, change as integer
            nam1 = nam1 + 1
            price1 = 30
            sum1 = price1 * nam1
            textbox1.text = sum1
            total = sum1 + sum2 + sum3 + sum4 + sum5 + sum6 + sum7 + sum8 + sum9 + sum10
            textbox11.text = total
            get = textbox12.text
            change = get - textbox11.text
            textbox13.text = change
    End Sub

    Private Sub Buttonชานมไต้หวันใส่ไข่มุก_Click(ByVal sender As System"Object, ByVal e As System.EventArgs) Handles Buttonชานมไต้หวันใส่ไข่มุก_Click
